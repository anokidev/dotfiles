[module/pulseaudio-control]
type = custom/script
tail = true
format-background = #530702 
label-padding = 1
label-foreground = ${colors.foreground}

# Icons mixed from Font Awesome 5 and Material Icons
# You can copy-paste your options for each possible action, which is more
# trouble-free but repetitive, or apply only the relevant ones (for example
# --sink-blacklist is only needed for next-sink).
exec = exec pulseaudio-control listen --icons-volume "ï€§ ,ï€¨ " --icon-muted "ï€¦ " --sink-nicknames-from "device.description" --sink-nickname "A"
click-right = exec pavucontrol &
click-left = exec pulseaudio-control togmute
click-middle = exec pulseaudio-control --sink-blacklist "alsa_output.pci-0000_01_00.1.hdmi-stereo-extra2" next-sink
scroll-up = exec pulseaudio-control --volume-max 130 up
scroll-down = exec pulseaudio-control --volume-max 130 down




